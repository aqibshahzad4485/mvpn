# MVPN Master Server Configuration
# 
# Copy this file to .env and fill in your values
# DO NOT commit .env to version control!

# GitHub Configuration
# REQUIRED - Create token at: https://github.com/settings/tokens
# Needs: repo (full control) for mvpn-backend and mvpn-scripts
GITHUB_TOKEN=""

# Cloudflare Configuration
# REQUIRED - Get token from: https://dash.cloudflare.com/profile/api-tokens
# Use template: "Edit zone DNS" for your domain
CF_TOKEN=""

# Email for Cloudflare and SSL certificates
# Optional - Default: aqib.shahzad4485@gmail.com
CF_EMAIL="aqib.shahzad4485@gmail.com"

# VPN Domain
# Optional - Default: vpn.aqibs.dev
# This domain will be used for SSL certificates
VPN_DOMAIN="vpn.aqibs.dev"

# Installation Directory
# Optional - Default: /opt/git
# Where to clone mvpn-backend and mvpn-scripts repositories
INSTALL_DIR="/opt/git"

# GitHub Organization/Username
# Optional - Default: aqibshahzad4485
# Your GitHub username or organization name
GITHUB_ORG="aqibshahzad4485"

# Slack Notifications (Optional)
# Create webhook at: https://api.slack.com/messaging/webhooks
# Used for critical certificate alerts only (expiring, updated, failures)
# Leave empty to disable Slack notifications
SLACK_WEBHOOK_URL=""

# Company Branding (for future use)
COMPANY_NAME="Mecta VPN"
COMPANY_DOMAIN="aqibs.dev"
COMPANY_EMAIL="admin@aqibs.dev"
